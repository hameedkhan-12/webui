// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  ADMIN
}

enum JobStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

model User {
  id      String   @id @default(uuid())
  clerkId String   @unique
  email   String   @unique
  name    String?
  avatar  String?
  role    UserRole @default(USER)

  ownedProjects Project[]         @relation("ProjectOwner")
  aiJobs        AIGenerationJob[]
  canvasChanges CanvasChange[]
  elementLocks  ElementLock[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
  @@index([clerkId])
}

model ProjectVersion {
  id        String  @id @default(uuid())
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  version  Int
  snapshot Json
  message  String?

  createdBy String
  createdAt DateTime @default(now())

  @@unique([projectId, version])
  @@index([projectId])
  @@index([createdAt])
}

model Project {
  id          String  @id @default(uuid())
  name        String
  slug        String  @unique
  description String?
  thumbnail   String?

  ownerId String
  owner   User   @relation("ProjectOwner", fields: [ownerId], references: [id], onDelete: Cascade)

  versions ProjectVersion[]
  aiJobs   AIGenerationJob[]
  canvas      Canvas?

  publishedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([ownerId])
  @@index([slug])
}

model AIGenerationJob {
  id String @id @default(uuid())

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  projectId String?
  project   Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)

  prompt  String
  context Json   @default("{}")

  jobType String // 'generate', 'modify', 'suggestions', 'regenerate', 'variations'

  status JobStatus @default(PENDING)
  result Json?
  error  String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([projectId])
  @@index([status])
  @@index([jobType])
}

model Canvas {
  id        String  @id @default(uuid())
  projectId String  @unique
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  elements    CanvasElement[]
  styles      Json            @default("{}")
  breakpoints Json            @default("{\"mobile\":640,\"tablet\":768,\"desktop\":1024}")

  version Int            @default(1)
  changes CanvasChange[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([projectId])
}

model CanvasElement {
  id       String @id @default(uuid())
  canvasId String
  canvas   Canvas @relation(fields: [canvasId], references: [id], onDelete: Cascade)

  type   String //e.g  'container', 'text', 'image', 'buttton'
  name   String // Human readable name for the element
  props  Json   @default("{}")
  styles Json   @default("{}")

  parentId String? //null = root element, otherwise parent's Id
  order    Int     @default(0)

  locked Boolean @default(false)
  hidden Boolean @default(false)

  responsiveStyles Json? @default("{}")

  createdBy String
  updatedBy String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  locks ElementLock[]

  @@index([canvasId])
  @@index([parentId])
  @@index([canvasId, parentId, order])
  @@index([createdAt])
}

model CanvasChange {
  id       String @id @default(uuid())
  canvasId String
  canvas   Canvas @relation(fields: [canvasId], references: [id], onDelete: Cascade)

  userId    String
  user      User    @relation(fields: [userId], references: [id])
  operation String // 'create', 'update', 'delete', 'move', 'reorder'
  elementId String?
  before    Json?
  after     Json?

  sessionId String
  timestamp DateTime @default(now())

  @@index([canvasId, timestamp])
  @@index([userId])
  @@index([sessionId])
}

model ElementLock {
  id        String        @id @default(uuid())
  elementId String
  element   CanvasElement @relation(fields: [elementId], references: [id], onDelete: Cascade)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  lockedAt  DateTime @default(now())
  expiresAt DateTime

  @@unique([elementId])
  @@index([elementId])
  @@index([userId])
  @@index([expiresAt])
}
